package mod2wolffexamplesDecisions;
import java.util.Scanner;

public class Slots {

	public static void main(String[] args) {
	Scanner scan = new Scanner(System.in);
	
	int x = (int) (Math.random()*9) +1;
	int y = (int) (Math.random()*9) +1;
	int z = (int) (Math.random()*9) +1;
	
	System.out.printf("Your Randomly Generated Slot Numbers are: %n%n%15s %5s %5s", x, y, z);
	
	if (x == y && y == z && z==x) 
		System.out.printf("%n%nYOU WON IT ALL, 3 numbers matched!");
	
	else if (x == y || y == z || x == z)
		System.out.printf("%n%nHey two numbers matched, so close!");
	
		
	}

}
